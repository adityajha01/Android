<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adityakumar.recipe.About"
    android:background="@drawable/about">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="About"
       android:textSize="30sp"
       android:padding="10sp"
       android:id="@+id/textView7"
       android:textColor="@color/colorPrimary"
       android:layout_above="@+id/textView8"
       android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a Recipe app developed by Aditya Kumar.
\nThank you for downloading.Your love and support will greatly help us in improving.
For any query please write us at -"
        tools:layout_editor_absoluteY="56dp"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/textView8"
        android:textColor="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textView100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adityanmamit@gmail.com"
        android:textColor="#C71585"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/textView101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView100"
        android:layout_marginTop="11dp"
        android:textColor="@color/colorAccent"
        android:text="Thank you"
        android:layout_alignStart="@+id/textView100" />


</RelativeLayout>
